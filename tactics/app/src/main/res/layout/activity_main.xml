<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/yooo"
    android:orientation="vertical"
    tools:context="com.example.xd.tactics.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/tactics_backBtn"
            style="@android:style/Widget.Holo.Light.Button.Borderless.Small"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="返回"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tactics_text1"
            android:layout_width="20dp"
            android:layout_height="match_parent"/>

        <TextView
            android:gravity="center"
            android:id="@+id/tactics_text2"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="战术"
            android:textSize="35sp"/>

        <TextView
            android:id="@+id/tactics_text3"
            android:layout_width="75dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/biankuang"
            android:paddingHorizontal="15dp">

            <TextView
                android:id="@+id/tactics_text4"
                android:layout_width="132dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="球队战力："
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/tactics_text5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="10000"
                android:textSize="25sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingHorizontal="50dp"
        android:paddingVertical="30dp"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tactics_text6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:text="进攻"
                    android:textSize="18sp"/>

                <Button
                    android:id="@+id/equippedOTactics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/ic_launcher"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal|bottom"
                    android:text=""/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tactics_text7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:text="防守"
                    android:textSize="18sp"/>

                <Button
                    android:id="@+id/equippedDTactics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/ic_launcher"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal|bottom"
                    android:text=""/>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:paddingHorizontal="40dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="7">

                <Button
                    android:id="@+id/showAllOTactics"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="进攻"
                    android:textSize="18sp"
                    android:gravity="center"/>

                <Button
                    android:id="@+id/showAllDTactics"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="防守"
                    android:textSize="18sp"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="7.5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="外线"
                    android:textSize="10sp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="内线"
                    android:textSize="10sp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="综合"
                    android:textSize="10sp"
                    android:gravity="center"/>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <LinearLayout
                    android:id="@+id/OTacticsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="invisible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp">

                        <Button
                            android:id="@+id/otactics1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@mipmap/ic_launcher"
                            android:gravity="center_horizontal|bottom"
                            android:text="战术名称"/>

                        <Button
                            android:id="@+id/otactics2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@mipmap/ic_launcher"
                            android:gravity="center_horizontal|bottom"
                            android:text="战术名称"/>

                        <Button
                            android:id="@+id/otactics3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@mipmap/ic_launcher"
                            android:gravity="center_horizontal|bottom"
                            android:text="战术名称"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp">

                        <Button
                            android:id="@+id/otactics4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@mipmap/ic_launcher"
                            android:gravity="center_horizontal|bottom"
                            android:text="战术名称"/>

                        <Button
                            android:id="@+id/otactics5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@mipmap/ic_launcher"
                            android:gravity="center_horizontal|bottom"
                            android:text="战术名称"/>

                        <Button
                            android:id="@+id/otactics6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@mipmap/ic_launcher"
                            android:gravity="center_horizontal|bottom"
                            android:text="战术名称"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp">

                        <Button
                            android:id="@+id/otactics7"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@mipmap/ic_launcher"
                            android:gravity="center_horizontal|bottom"
                            android:text="战术名称"/>

                        <Button
                            android:id="@+id/otactics8"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@mipmap/ic_launcher"
                            android:gravity="center_horizontal|bottom"
                            android:text="战术名称"/>

                        <Button
                            android:id="@+id/otactics9"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@mipmap/ic_launcher"
                            android:gravity="center_horizontal|bottom"
                            android:text="战术名称"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/DTacticsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="invisible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp">

                        <Button
                            android:id="@+id/dtactics1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@mipmap/ic_launcher"
                            android:gravity="center_horizontal|bottom"
                            android:text="战术名称"/>

                        <Button
                            android:id="@+id/dtactics2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@mipmap/ic_launcher"
                            android:gravity="center_horizontal|bottom"
                            android:text="战术名称"/>

                        <Button
                            android:id="@+id/dtactics3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@mipmap/ic_launcher"
                            android:gravity="center_horizontal|bottom"
                            android:text="战术名称"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp">

                        <Button
                            android:id="@+id/dtactics4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@mipmap/ic_launcher"
                            android:gravity="center_horizontal|bottom"
                            android:text="战术名称"/>

                        <Button
                            android:id="@+id/dtactics5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@mipmap/ic_launcher"
                            android:gravity="center_horizontal|bottom"
                            android:text="战术名称"/>

                        <Button
                            android:id="@+id/dtactics6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@mipmap/ic_launcher"
                            android:gravity="center_horizontal|bottom"
                            android:text="战术名称"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp">

                        <Button
                            android:id="@+id/dtactics7"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@mipmap/ic_launcher"
                            android:gravity="center_horizontal|bottom"
                            android:text="战术名称"/>

                        <Button
                            android:id="@+id/dtactics8"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@mipmap/ic_launcher"
                            android:gravity="center_horizontal|bottom"
                            android:text="战术名称"/>

                        <Button
                            android:id="@+id/dtactics9"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@mipmap/ic_launcher"
                            android:gravity="center_horizontal|bottom"
                            android:text="战术名称"/>
                    </LinearLayout>
                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

