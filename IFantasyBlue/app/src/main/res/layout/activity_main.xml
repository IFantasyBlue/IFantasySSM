<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.teamblue.xd.ifantasy_blue.MainActivity"
    android:background="@mipmap/loginbackground">



    <LinearLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_marginBottom="25dp"
        android:paddingHorizontal="10dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/user_info_form"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@drawable/text_view_border"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:paddingVertical="3dp">

            <ImageView
                android:id="@+id/show_user_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="0dp">

                <TextView
                    android:id="@+id/show_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="阿民aniki"
                    android:textColor="@color/colorText"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/show_user_level"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"

                        android:text="LV:名人堂 "
                        android:textColor="@color/colorText"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/show_user_vip"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="VIP.9"
                        android:textColor="@color/colorText"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/show_user_power"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="4"
            android:background="@drawable/text_view_border"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:text="球队战力:10000"
            android:textColor="@color/colorText"
            android:textSize="25sp"
            android:textStyle="bold" />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/text_view_border"
            android:layout_weight="4"
            android:padding="10dp">

            <TextView
                android:id="@+id/show_user_money"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="资金：1399万"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/colorText" />

            <Button
                android:id="@+id/get_money"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/show_user_money"
                android:background="@mipmap/ic_launcher"
                android:minHeight="0dp"
                android:minWidth="0dp" />
        </RelativeLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingVertical="10dp"
            android:layout_marginLeft="10dp"
            >

            <Button
                android:id="@+id/settingbtn"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:background="@mipmap/ic_launcher"
                android:minHeight="0dp"
                android:minWidth="0dp" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rank_layout"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_above="@+id/model_layout"

        android:layout_marginRight="25dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/action_bar"
        android:background="@drawable/rank_view_border"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_weight="1"
            android:gravity="center"
            android:minHeight="0dp"
            android:paddingVertical="3dp"
            android:text="排行榜"
            android:textColor="@color/colorText"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#aea594"
            android:minHeight="0dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/rank_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/rank_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/rank_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </ScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#aea594"
            android:minHeight="0dp" />

        <Button
            android:id="@+id/open_rankbtm"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:text="展开"
            android:textColor="@color/colorText"
            android:textSize="14dp"
            android:textStyle="bold" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/model_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="100dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/to_chat_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_launcher"
                android:minHeight="0dp"
                android:minWidth="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="聊天"
                android:textColor="@color/colorText"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/to_bag_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_launcher"
                android:minHeight="0dp"
                android:minWidth="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="背包"
                android:textColor="@color/colorText"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/to_lucky_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_launcher"
                android:minHeight="0dp"
                android:minWidth="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="招募"
                android:textColor="@color/colorText"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/to_ti_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_launcher"
                android:minHeight="0dp"
                android:minWidth="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="战术"
                android:textColor="@color/colorText"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/to_player_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_launcher"
                android:minHeight="0dp"
                android:minWidth="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="球队"
                android:textColor="@color/colorText"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@+id/model_layout"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/action_bar"
        android:layout_marginLeft="25dp"
        android:orientation="vertical"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/to_sign_in_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_launcher"
                android:minHeight="0dp"
                android:minWidth="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="签到"
                android:textColor="@color/colorText"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="10sp">

            <Button
                android:id="@+id/to_act_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_launcher"
                android:minHeight="0dp"
                android:minWidth="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活动"
                android:textColor="@color/colorText"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/topkbtm"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/center_form"
        android:layout_toRightOf="@+id/center_form"

        android:background="@mipmap/pk" />

    <RelativeLayout
        android:id="@+id/center_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/model_layout"
        android:layout_below="@+id/action_bar"
        android:layout_centerInParent="true"
        android:layout_marginBottom="25dp"
        android:layout_toLeftOf="@+id/activity_layout"
        android:layout_toRightOf="@+id/rank_layout"
        android:background="@drawable/text_view_border"
        android:padding="10sp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/text_view_border">

            <ImageView
                android:id="@+id/playbook"
                android:layout_width="300dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:paddingVertical="3dp"
                android:src="@mipmap/zhanshuban" />

            <Button
                android:id="@+id/pg_btm"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <Button
                android:id="@+id/sg_btm"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/pg_btm"
                android:layout_marginLeft="50dp" />

            <Button
                android:id="@+id/c_btm"
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:layout_below="@+id/sg_btm"

                android:layout_marginLeft="55dp"
                android:layout_toEndOf="@+id/pg_btm" />

            <Button
                android:id="@+id/pf_btm"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/c_btm"
                android:layout_marginLeft="50dp" />

            <Button
                android:id="@+id/sf_btm"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignStart="@+id/c_btm"
                android:layout_below="@+id/pf_btm" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingHorizontal="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/show_trainer_icon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/ic_launcher"
                    android:layout_marginRight="5dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/show_trainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="主教练\nyangligg:"
                        android:textColor="@color/colorText"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/show_trainer_info"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/show_trainer" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="#aea594"
                android:minHeight="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="目前战术："
                android:textColor="@color/colorText"
                android:textSize="10sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/show_tactics"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="5dp">

                <ImageView
                    android:id="@+id/show_otactics_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@mipmap/ic_launcher" />

                <ImageView
                    android:id="@+id/show_dtactics_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/ic_launcher" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>



</RelativeLayout>
