<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/package_back"
    android:alpha="0.9"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"

        >
        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="返回"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#FAF0E6"

            />

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:gravity="center"
            android:text="招募"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#FAF0E6"

        />


        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="280dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="资金:"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#FAF0E6"/>
            <TextView
                android:id="@+id/money"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#FAF0E6"/>

            <Button

                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="#666699"
                android:text="+"
                android:textSize="25dp"
                android:textColor="#FAF0E6"
                />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"

            android:orientation="vertical"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="幸运招募"
                    android:textSize="20sp"
                    android:textColor="#FAF0E6"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp">
                <TextView
                    android:id="@+id/timeOK"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="35dp"
                    android:textColor="#FAF0E6"
                    android:layout_marginLeft="45dp"
                    android:text=""
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btnOnce"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/bbuton_danger_rounded"
                    android:gravity="center"
                    android:text="招募一次"
                    android:textSize="18sp" />

                <Button
                    android:layout_below="@+id/btnOnce"
                    android:id="@+id/btnFive"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/bbuton_danger_rounded"
                    android:gravity="center"
                    android:text="招募五次"
                    android:textSize="18sp" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="2"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:text="定向招募"
                    android:textSize="20sp"
                    android:textColor="#FAF0E6"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="30dp">

                <TextView
                    android:clickable="true"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="ALL"
                    android:textColor="#FAF0E6"
                    android:textSize="20sp"
                    android:id="@+id/all"/>

                <TextView
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="|"
                    android:textColor="#FAF0E6"
                    android:textSize="20sp" />

                <TextView
                    android:clickable="true"
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="C"
                    android:textColor="#FAF0E6"
                    android:textSize="20sp"
                    android:id="@+id/c"/>

                <TextView
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="|"
                    android:textColor="#FAF0E6"
                    android:textSize="20sp" />

                <TextView
                    android:clickable="true"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="PF"
                    android:textColor="#FAF0E6"
                    android:textSize="20sp"
                    android:id="@+id/pf"/>

                <TextView
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="|"
                    android:textColor="#FAF0E6"
                    android:textSize="20sp" />

                <TextView
                    android:clickable="true"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="SF"
                    android:textColor="#FAF0E6"
                    android:textSize="20sp"
                    android:id="@+id/sf"/>

                <TextView
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="|"
                    android:textColor="#FAF0E6"
                    android:textSize="20sp" />

                <TextView
                    android:clickable="true"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="SG"
                    android:textColor="#FAF0E6"
                    android:textSize="20sp"
                    android:id="@+id/sg"/>

                <TextView
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="|"
                    android:textColor="#FAF0E6"
                    android:textSize="20sp" />

                <TextView
                    android:clickable="true"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="PG"
                    android:textColor="#FAF0E6"
                    android:textSize="20sp"
                    android:id="@+id/pg"/>

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="90dp"

                    android:background="?android:attr/selectableItemBackground"
                    android:baselineAligned="false"
                    android:entries="@array/directArr"
                    android:spinnerMode="dropdown"
                    android:visibility="visible" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:clickable="true"
                    android:id="@+id/iv1"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"/>
                <!---android:background="@mipmap/player_12"-->

                <ImageView
                    android:clickable="true"
                    android:id="@+id/iv2"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"/>
                    <!---android:background="@mipmap/player_10" -->

                <ImageView
                    android:clickable="true"
                    android:id="@+id/iv3"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"/>
                    <!---android:background="@mipmap/player_11" -->
                <ImageView
                    android:clickable="true"
                    android:id="@+id/iv4"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"/>
                <!--- android:background="@mipmap/player_15" -->

         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="20dp"
             android:layout_marginTop="155dp"
             android:layout_marginLeft="10dp"
             android:orientation="horizontal">

             <TextView
                 android:layout_width="80dp"
                 android:layout_height="match_parent"
                 android:layout_marginLeft="25dp"
                 android:textSize="8dp"
                 android:id="@+id/tv1"
                 android:gravity="center"
                 android:textColor="#FAF0E6"/>
             <!--- android:text="Anthony Davis"-->

             <TextView
                 android:layout_width="80dp"
                 android:layout_height="match_parent"
                 android:layout_marginLeft="20dp"
                 android:textSize="8dp"
                 android:id="@+id/tv2"
                 android:gravity="center"
                 android:textColor="#FAF0E6"/>
             <!---android:text="Clint Capela"-->

         <TextView
             android:layout_width="80dp"
             android:layout_height="match_parent"
             android:layout_marginLeft="20dp"
             android:textSize="8dp"
             android:id="@+id/tv3"
             android:gravity="center"
             android:textColor="#FAF0E6"/>
             <!--- android:text="Stephen Curry"-->

         <TextView
             android:layout_width="80dp"
             android:layout_height="match_parent"
             android:layout_marginLeft="20dp"
             android:textSize="8dp"
             android:id="@+id/tv4"
             android:gravity="center"
             android:textColor="#FAF0E6"/>
             <!---  android:text="Kyrie Irving"-->

     </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="80dp"
         android:layout_marginTop="180dp"
         android:layout_marginLeft="10dp"
         android:orientation="horizontal">

         <ImageView
             android:clickable="true"
             android:id="@+id/iv5"
             android:layout_width="80dp"
             android:layout_height="match_parent"
             android:layout_marginLeft="20dp"/>
         <!--- android:background="@mipmap/player_20" -->

             <ImageView
             android:clickable="true"
             android:id="@+id/iv6"
             android:layout_width="80dp"
             android:layout_height="match_parent"
             android:layout_marginLeft="20dp" />
             <!---android:background="@mipmap/player_18"-->

             <ImageView
             android:clickable="true"
             android:id="@+id/iv7"
             android:layout_width="80dp"
             android:layout_height="match_parent"
             android:layout_marginLeft="20dp" />
             <!---android:background="@mipmap/player_16"-->

             <ImageView
             android:clickable="true"
             android:id="@+id/iv8"
             android:layout_width="80dp"
             android:layout_height="match_parent"
             android:layout_marginLeft="20dp"/>
             <!--- android:background="@mipmap/player_17" -->

         </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="20dp"
         android:layout_marginTop="265dp"
         android:layout_marginLeft="10dp"
         android:orientation="horizontal">

         <TextView
             android:layout_width="80dp"
             android:layout_height="match_parent"
             android:layout_marginLeft="25dp"
             android:textSize="8dp"
             android:id="@+id/tv5"
             android:gravity="center"
             android:textColor="#FAF0E6"/>
         <!--- android:text="YaoMing" -->

         <TextView
             android:layout_width="80dp"
             android:layout_height="match_parent"
             android:layout_marginLeft="20dp"
             android:textSize="8dp"
             android:id="@+id/tv6"
             android:textColor="#FAF0E6"
             android:gravity="center" />
         <!--- android:text="Rajon Rondo" -->


     <TextView
         android:layout_width="80dp"
         android:layout_height="match_parent"
         android:layout_marginLeft="20dp"
         android:textSize="8dp"
         android:id="@+id/tv7"
         android:textColor="#FAF0E6"
         android:gravity="center" />
         <!---  android:text="LeBron James"-->


     <TextView
         android:layout_width="80dp"
         android:layout_height="match_parent"
         android:layout_marginLeft="20dp"
         android:textSize="8dp"
         android:id="@+id/tv8"
         android:gravity="center"
         android:textColor="#FAF0E6"/>
         <!--- android:text="Victor Oladipo"-->
 </LinearLayout>

</RelativeLayout>
</LinearLayout>
</RelativeLayout>